{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zenus",
  "version": "0.2.5",
  "identifier": "xyz.vzparse.zenus",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zenus",
        "width": 1000,
        "height": 680,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["window-operations"]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
